<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/form.css">
    <title>Agregar producto</title>
</head>
<body>
    <form action="/api/productos" method="post">
        <label for="title">Nombre del producto</label>
        <input type="text" name="title">
        <label for="price">Precio del producto</label>
        <input type="number" name="price" min="0">
        <label for="thumbnail">Imagen del producto</label>
        <input type="text" name="thumbnail">
        <input type="submit" value="Enviar Datos">
        <a href="/api/productos">Ver productos</a>
    </form>

    <section id="chat-user">
        {{#if username}}
            <div id="chat-welcome">
                <h4 id="chat-welcome-title" data-username={{username}}>Bienvenido {{username}}</h4>
                <button><a href="/api/logout">Logout</a></button>
            </div>
        {{else}}
            <p>No est√°s conectado. Conectate para chatear!</p>
            <a href="/api/login">Conectarme</a>
            <br>
            <a href="/api/register">No tengo una cuenta</a>
        {{/if}}
    </section>
    <section id="message-container">
        <div id="compression">Compresion: </div>
    </section>
    {{#if username}}
        <form id="message-form" action="">
            <input id="message-mail" type="text" name="mail" value={{username}} style="display:none;">
            <label for="message">Mensaje</label>
            <input id="message-msg" type="text" name="message">
            <input type="submit" id="message-button" value="Enviar mensaje"></input>
        </form>
    {{/if}}
    
    <script async=false defer=false src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/socket.js"></script>
    <script src="/form.js"></script>
</body>
</html>