doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Ver productos
    body 
        h1 Productos 
        main
            each product in products
                li
                    div= product.title 
                    div= product.price
                    img(src=product.thumbnail, alt=product.title)