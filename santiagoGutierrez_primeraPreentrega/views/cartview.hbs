<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/products.css">
    <link rel="stylesheet" href="/form.css">
    <title>Mi Carrito</title>
</head>
<body>
    <h1>Mi Carrito</h1>
    <ul id="product-list">
        {{#each products}}
        <li>
            <h4>{{this.title}}</h4>
            <p>{{this.desc}}</p>
            <div>Precio: ${{this.price}}</div>
            <img class="product-img" src={{this.thumbnail}} alt={{this.title}}>
        </li>
        {{/each}}
    </ul>

    <section id="message-container"></section>
    <form id="message-form" action="">
        <label for="mail">Mail</label>
        <input id="message-mail" type="text" name="mail">
        <label for="message">Mensaje</label>
        <input id="message-msg" type="text" name="message">
        <input type="submit" id="message-button" value="Enviar mensaje"></input>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/socket.js"></script>
    <script src="/form.js"></script>
</body>
</html>