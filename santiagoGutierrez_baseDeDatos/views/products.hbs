<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/products.css">
    <link rel="stylesheet" href="/form.css">
    <title>Productos</title>
</head>
<body>
    <h1>Productos</h1>
    <ul id="product-list">
        {{#each products}}
        <li>
            <div>{{this.data.title}}</div>
            <div>{{this.data.price}}</div>
            <img class="product-img" src={{this.data.thumbnail}} alt={{this.data.title}}>
        </li>
        {{/each}}
    </ul>

    <section id="message-container">
        {{#each messages}}
        <div>
            <span class="msg-user-mail">{{this.data.user}}</span>
            <span class="msg-time">- [{{this.data.datetime}}] :</span>
            <span class="msg-user-msg">{{this.data.msg}}</span>
        </div>
        {{/each}}
    </section>
    <form id="message-form" action="">
        <label for="mail">Mail</label>
        <input id="message-mail" type="text" name="mail">
        <label for="message">Mensaje</label>
        <input id="message-msg" type="text" name="message">
        <input type="submit" id="message-button" value="Enviar mensaje"></input>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/socket.js"></script>
    <script src="/form.js"></script>
    <script src="/products.js"></script>
</body>
</html>